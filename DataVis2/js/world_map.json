{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 300,
  "title": {"text": "Obesity in Adults World Comparison","anchor": "middle"},
  "data": {
    "url": "https://raw.githubusercontent.com/kevinarifin/3179/refs/heads/main/DataVis2/Data/share-of-adults-defined-as-obese.csv"
  },
  "transform": [
    {
      "lookup": "Entity",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/kevinarifin/3179/refs/heads/main/custom.geo%20(1).json",
          "format": {"type": "topojson", "feature": "custom.geo"}
        },
        "key": "properties.name",
        "fields": ["properties", "type", "geometry"]
      }
    },
    {"filter": "datum.Year==year"}
  ],
  "params": [
    {
      "name": "year",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 1975,
        "max": 2016,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ],
  "projection": {"type": "naturalEarth1"},
  "mark": "geoshape",
  "encoding": {
    "color": {"field": "Prevalence of obesity among adults, BMI >= 30 (crude estimate) (%) - Sex: both sexes - Age group: 18+  years", "type": "quantitative","scale": {"type": "threshold",
                "domain": [5,10,15,20,25,30,35,40],
                "range": ["#FFF7EC","#FEE8C8","#FDD49E","#FDBB84","#FC8D59","#EF6548","#D7301F","#B30000","#7F0000"]},
    "legend": {"format": ".2s", "title": ["Overweight & obesity", "proportion for adults"]}},
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {"field": "Prevalence of obesity among adults, BMI >= 30 (crude estimate) (%) - Sex: both sexes - Age group: 18+  years", "type": "quantitative","title": "Porportion of obesity among adults"}
    ]
  }
}